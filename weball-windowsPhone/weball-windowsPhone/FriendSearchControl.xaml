<UserControl x:Class="weball_windowsPhone.FriendSearchControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" Height="80" Width="500">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <Image x:Name="ProfileImage" HorizontalAlignment="Left" Height="70" VerticalAlignment="Top" Width="76" Source="{ Binding photo }" Margin="0,10,0,0"/>
        <Button CommandParameter="{Binding _id}" Content="{Binding fullName}" HorizontalAlignment="Left" Margin="81,10,0,0" VerticalAlignment="Top" Width="357" Click="Button_Click" BorderThickness="0" Height="60"/>
    </Grid>
</UserControl>