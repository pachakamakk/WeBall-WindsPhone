<UserControl x:Class="weball_windowsPhone.NotifControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}" d:DesignWidth="480" Height="94.397">

    <Grid x:Name="LayoutRoot" Background="{StaticResource PhoneChromeBrush}">
        <Image x:Name="ProfileImage" HorizontalAlignment="Left" Height="94" VerticalAlignment="Top" Width="100" Source="{ Binding from.photo }"/>
        <TextBlock x:Name="TextNotif" HorizontalAlignment="Left" Margin="122,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="74" Width="262"/>
    </Grid>
</UserControl>